<% layout("/layouts/boilerplate") -%>

<div class="row my-3">
    <h1 class="col-6 offset-3 mb-2 mt-2" style="color:#fe424d">Sign-Up on Voyage Vista</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 mt-3">
                <label for="username" class="form-label"><b>Username</b></label>
                <input
                    name="username"
                    id="username"
                    type="text"
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3 mt-3">
                <label for="email" class="form-label"><b>Email</b></label>
                <input
                    name="email"
                    id="email"
                    type="text"
                    class="form-control"
                    required
                />
            </div>
            <div class="mb-3 mt-3">
                <label for="password" class="form-label"><b>Password</b></label>
                <input
                    name="password"
                    id="password"
                    type="password"
                    class="form-control"
                    required
                />
            </div>
            <button class="btn btn-dark add-btn mt-3 ">SignUp</button>
        </form>
    </div>
</div>